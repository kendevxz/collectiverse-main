<div class="full__site__content">
  <div class="registration__box">
    <div class="form__container">
      <h2>Log-in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          <div class="form__inputs w-100">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="form-actions login__buttons">
          <%= f.button :submit, "Sign in", class: "button__secondary"%>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "button__primary" %><br />
        </div>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end %>
    </div>
  </div>
</div>
