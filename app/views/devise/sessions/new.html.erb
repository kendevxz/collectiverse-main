<div class="d-flex" id="set-margin">
  <div class="registration__content__left">
    <div class="registration__box">
      <div class="form__container p-5" style="width: 100%">
        <h2 class="static__text">Log-in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
            <div class="form__inputs w-100 static__text">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
          <div class="form-actions login__buttons mb-3">
            <%= f.button :submit, "Sign in", class: "button__secondary"%>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "button__primary" %><br />
          </div>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="registration__content__right">
    <img class="session__image" src="https://images.pexels.com/photos/16075337/pexels-photo-16075337/free-photo-of-poppen-speelgoed-handgemaakt-grijze-achtergrond.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="collection of toys">
    <%# <%= image_tag "login_picture", class: "session__image" %>
  </div>
</div>
